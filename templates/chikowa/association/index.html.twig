{% extends 'base.html.twig' %}

{% block title %}Association index{% endblock %}

{% block body %}
    <h1>Association index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Libelle</th>
                <th>TypeEntite</th>
                <th>Localisation</th>
                <th>Pays</th>
                <th>Ville</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for association in associations %}
            <tr>
                <td>{{ association.id }}</td>
                <td>{{ association.libelle }}</td>
                <td>{{ association.typeEntite }}</td>
                <td>{{ association.localisation }}</td>
                <td>{{ association.pays }}</td>
                <td>{{ association.ville }}</td>
                <td>
                    <a href="{{ path('chikowa_association_show', {'id': association.id}) }}">show</a>
                    <a href="{{ path('chikowa_association_edit', {'id': association.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('chikowa_association_new') }}">Create new</a>
{% endblock %}
